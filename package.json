{
  "name": "typescript-ddd-template",
  "version": "0.1.0",
  "description": "ドメイン駆動ベースのサーバーサイドフレーム",
  "author": "Daichi Shirakawa",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "main": "dist/functions.index.js",
  "scripts": {
    "migration:generate": "ts-node $(npm bin)/typeorm migration:generate -n sql; npm run export-er-diagram",
    "migration:run": "ts-node $(npm bin)/typeorm migration:run",
    "migration:revert": "ts-node $(npm bin)/typeorm migration:revert",
    "tsoa": "ts-node tools/tsoa-routes-generator.ts",
    "generate-er": "ts-node tools/er-diagram-generator.ts",
    "validate-layers": "ts-node tools/ddd-layers-validator.ts",
    "test": "jest /select/your/test --watch --maxWorkers=50%",
    "test:debug": "node --inspect=9229 $(npm bin)/jest /select/your/test --runInBand --watch",
    "serve": "npx @google-cloud/functions-framework --target=api",
    "start": "tsc-watch --onSuccess 'npm run serve'",
    "serve:debug": "node --inspect=9229 node_modules/@google-cloud/functions-framework --target=api",
    "debug": "tsc-watch --onSuccess 'npm run serve:debug'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "tsoa": "^3.7.0",
    "typeorm": "^0.2.32",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "@types/cors": "^2.8.10",
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.4",
    "@types/node": "^15.0.3",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "jest": "^26.6.3",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typeorm-uml": "^1.6.2"
  }
}
